{
  "root": "dist/public",
  "https_only": true,
  "clean_urls": true,

  "headers": {
    "/assets/**":  { "Cache-control": "public, max-age=512000" },
    "/assets/*.js": {
      "Content-encoding": "gzip",
      "Content-type": "text/javascript"
    },
    "/assets/*.css": {
      "Content-encoding": "gzip",
      "Content-Type": "text/css"
    }
  }
}
